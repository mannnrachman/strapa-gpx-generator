# Development Dockerfile
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Make Vite accessible from outside container
ENV VITE_HOST=0.0.0.0

CMD ["npm", "run", "dev"]